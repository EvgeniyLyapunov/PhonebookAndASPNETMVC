@model PhonebookAndASPNETMVC.Models.FullContact
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/normalize.css">
    <link rel="stylesheet" href="~/css/contactsStyle.css">
    <title>Details of contact</title>
</head>
<body class="body">
    <header class="header">
        <div class="container">
            <div class="header-container">
                <div class="header__img">
                    <img class="header__img-icon" src="@(Model.PicturePath)" alt="иконка контакта">
                </div>
                <h1 class="header__h1">@(Model.FirstName) @(Model.LastName)</h1>
            </div>
        </div>
    </header>

    <main class="main">
        <div class="container">
            <div class="main__container">
                <table class="table">
                    <tr class="table__row">
                        <td class="table__data-img"><img class="table__img" src="~/img/id.png"></td>
                        <td class="table__data-field-name">ID контакта</td>
                        <td class="table__date-info">@(Model.Id)</td>
                    </tr>
                    <tr class="table__row">
                        <td><img class="table__img" src="~/img/name.png"></td>
                        <td class="table__data-field-name">Фамилия</td>
                        <td class="table__date-info">@(Model.LastName)</td>
                    </tr>
                    <tr class="table__row">
                        <td><img class="table__img" src="~/img/name.png"></td>
                        <td class="table__data-field-name">Имя</td>
                        <td class="table__date-info">@(Model.FirstName)</td>
                    </tr>
                    <tr class="table__row">
                        <td><img class="table__img" src="~/img/name.png"></td>
                        <td class="table__data-field-name">Отчество</td>
                        <td class="table__date-info">@(Model.MiddleName)</td>
                    </tr>
                    <tr class="table__row">
                        <td><img class="table__img" src="~/img/smartphone.png"></td>
                        <td class="table__data-field-name">Телефон</td>
                        <td class="table__date-info">@(Model.PhoneNumber)</td>
                    </tr>
                    <tr class="table__row">
                        <td><img class="table__img" src="~/img/city.png"></td>
                        <td class="table__data-field-name">Адрес</td>
                        <td class="table__date-info">@(Model.Address)</td>
                    </tr>
                    <tr class="table__row">
                        <td><img class="table__img" src="~/img/Information.png"></td>
                        <td class="table__data-field-name">Дополнительная информация</td>
                        <td class="table__date-info">@(Model.Info)</td>
                    </tr>
                </table>
                <div class="navigation-back">
                    <a class="navigation-back__link" asp-action="EditContact" asp-route-Id="@(Model.Id)">
                        <img class="navigation-back__icon" src="~/img/edit.png" alt="иконка редактировать контакт">
                        <span class="navigation-back__text">edit contact</span>
                    </a>
                    <a class="navigation-back__link" asp-action="AllContacts">
                        <img class="navigation-back__icon" src="~/img/back.png" alt="иконка вверх">
                        <span class="navigation-back__text">to previous page</span>
                    </a>
                    <a class="navigation-back__link" asp-controller="Home" asp-action="Index">
                        <img class="navigation-back__icon" src="~/img/home.png" alt="иконка назад">
                        <span class="navigation-back__text">to home page</span>
                    </a>
                </div>
            </div>
        </div>
    </main>
</body>
</html>