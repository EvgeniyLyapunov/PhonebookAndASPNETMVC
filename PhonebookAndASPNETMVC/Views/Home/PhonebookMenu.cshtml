
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/normalize.css">
    <link rel="stylesheet" href="~/css/style.css">
    <title>Phone book menu</title>
</head>
<body class="body">
    <main>
        <div class="container">
            <div class="main">
                <h1 class="main__h1">Phone book menu</h1>
                <ul class="main__menu-list phoneBookMenu-list">
                    <li class="main__list-item phoneBookMenu-list__item">
                        <a asp-controller="Phonebook" asp-action="AllContacts" class="main__link">
                            <img id="openedBook" class="main__menu-icon" src="~/img/opened-phone-book.png" alt="иконка телефонная книга">
                        </a>
                    </li>
                    <li class="main__list-item phoneBookMenu-list__item">
                        <a asp-controller="Phonebook" asp-action="NewContact" class="main__link">
                            <img id="addNewContact" class="main__menu-icon" src="~/img/new-user.png" alt="иконка новый контакт">
                        </a>
                    </li>
                    <li class="main__list-item phoneBookMenu-list__item">
                        <a asp-controller="Phonebook" asp-action="SearchContacts" class="main__link">
                            <img id="search" class="main__menu-icon" src="~/img/Searchtool.png" alt="поиск">
                        </a>
                    </li>
                </ul>
                <span class="icon-description"></span>

                <div class="navigation-back">
                    <a class="navigation-back__link" asp-action="Index">
                        <img class="navigation-back__icon" src="~/img/home.png" alt="иконка назад">
                        <span class="navigation-back__text">to home page</span>
                    </a>
                </div>

            </div>
        </div>
    </main>
    <script src="~/js/scriptPhoneBookMenu.js"></script>
</body>
</html>